<UserControl x:Class="spring.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:lcl="clr-namespace:spring"
             xmlns:h="http://helix-toolkit.org/wpf"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="700">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Bottom" Content="Compute" Command="{Binding Compute}" Margin="5"/>
        <ContentControl DockPanel.Dock="Bottom" prism:RegionManager.RegionName="propsViewRegion"
                            MinHeight="20"/>
        <!--<ContentControl prism:RegionManager.RegionName="plotsViewRegion"/>-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <h:HelixViewport3D Grid.Column="0" Grid.Row="0"  Background="{h:LinearGradientBrush White, White}"
                                ShowViewCube="False" IsRotationEnabled="False" >
                <h:HelixViewport3D.Camera>
                    <OrthographicCamera Position="20,-1,15" LookDirection="0,10,0" UpDirection="0,0,1" 
                                        Width="56"  />
                </h:HelixViewport3D.Camera>
                <!--<h:SunLight/>-->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <AmbientLight Color="#FFFFFF"/>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <h:GridLinesVisual3D Width="100" Length="100" MinorDistance="10"
                                     MajorDistance="30" Fill="Gray" Normal="0,1,0"/>
                <h:CubeVisual3D Fill="Gray" SideLength="0.5"/>
                <h:ArrowVisual3D Diameter="0.5" Fill="Gray" Point2="0,0,30"/>
                <h:BillboardTextVisual3D Text="Y" Foreground="Gray" FontWeight="Bold" Position="-2,0,30"/>
                <h:ArrowVisual3D Diameter="0.5" Fill="Gray" Point2="40,0,0"/>
                <h:BillboardTextVisual3D Text="Time, s" Foreground="Gray" FontWeight="Bold" Position="40,0,-2"/>
            </h:HelixViewport3D>
            <h:HelixViewport3D Grid.Column="1" Grid.Row="0" Background="{h:LinearGradientBrush White, White}">
                <h:HelixViewport3D.DefaultCamera>
                    <PerspectiveCamera Position="-20 -40 20" LookDirection="17 34 -17" UpDirection="0 0 1"/>
                </h:HelixViewport3D.DefaultCamera>
                <h:SunLight/>
                <h:GridLinesVisual3D/>
            </h:HelixViewport3D>
            <h:HelixViewport3D Grid.Column="0" Grid.Row="1"  Background="{h:LinearGradientBrush White, White}"
                               ShowViewCube="False" IsRotationEnabled="False" >
                <h:HelixViewport3D.Camera>
                    <OrthographicCamera Position="20,-1,15" LookDirection="0,10,0" UpDirection="0,0,1" 
                                        Width="56"  />
                </h:HelixViewport3D.Camera>
                <!--<h:SunLight/>-->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <AmbientLight Color="#FFFFFF"/>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <h:GridLinesVisual3D Width="100" Length="100" MinorDistance="10"
                                     MajorDistance="30" Fill="Gray" Normal="0,1,0"/>
                <h:CubeVisual3D Fill="Gray" SideLength="0.5"/>
                <h:ArrowVisual3D Diameter="0.5" Fill="Gray" Point2="0,0,30"/>
                <h:BillboardTextVisual3D Text="Z" Foreground="Gray" FontWeight="Bold" Position="-2,0,30"/>
                <h:ArrowVisual3D Diameter="0.5" Fill="Gray" Point2="40,0,0"/>
                <h:BillboardTextVisual3D Text="Time, s" Foreground="Gray" FontWeight="Bold" Position="40,0,-2"/>
            </h:HelixViewport3D>
            <h:HelixViewport3D Grid.Column="1" Grid.Row="1" Background="{h:LinearGradientBrush White, White}"
                               ShowViewCube="False" IsRotationEnabled="False" >
                <h:HelixViewport3D.Camera>
                    <OrthographicCamera Position="20,-1,15" LookDirection="0,10,0" UpDirection="0,0,1" 
                                        Width="56"  />
                </h:HelixViewport3D.Camera>
                <!--<h:SunLight/>-->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <AmbientLight Color="#FFFFFF"/>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <h:GridLinesVisual3D Width="100" Length="100" MinorDistance="10"
                                     MajorDistance="30" Fill="Gray" Normal="0,1,0"/>
                <h:CubeVisual3D Fill="Gray" SideLength="0.5"/>
                <h:ArrowVisual3D Diameter="0.5" Fill="Gray" Point2="0,0,30"/>
                <h:BillboardTextVisual3D Text="X" Foreground="Gray" FontWeight="Bold" Position="-2,0,30"/>
                <h:ArrowVisual3D Diameter="0.5" Fill="Gray" Point2="40,0,0"/>
                <h:BillboardTextVisual3D Text="Time, s" Foreground="Gray" FontWeight="Bold" Position="40,0,-2"/>
            </h:HelixViewport3D>

        </Grid>
        <!--<TabControl>
            <TabItem Header="3D view">
                <ContentControl prism:RegionManager.RegionName="ThrDViewRegion"/>
            </TabItem>
            <TabItem Header="Displacement">
                <ContentControl prism:RegionManager.RegionName="DisplPlotViewRegion"/>
            </TabItem>
            <TabItem Header="Force">
                <ContentControl prism:RegionManager.RegionName="ForcePlotViewRegion"/>
            </TabItem>
            <TabItem Header="Acceleration">
                <ContentControl prism:RegionManager.RegionName="AccelPlotViewRegion"/>
            </TabItem>
            <TabItem Header="Velocity">
                <ContentControl prism:RegionManager.RegionName="VelPlotViewRegion"/>
            </TabItem>
            <TabItem Header="Coordinates">
                <ContentControl prism:RegionManager.RegionName="CoordPlotViewRegion"/>
            </TabItem>
        </TabControl>-->
    </DockPanel>
</UserControl>
